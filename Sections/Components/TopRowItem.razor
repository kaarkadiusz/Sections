<a class="top-row-item" href="@Href">
    <div>
        @Icon
    </div>
    <div>
        @Text
    </div>
</a>

@code {
    [Parameter]
    public string Href { get; set; } = "/";
    [Parameter]
    public string Text { get; set; } = "";
    [Parameter]
    public RenderFragment? Icon { get; set; }
}
